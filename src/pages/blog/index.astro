---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import ButtonLink from "../../components/ButtonLink.astro";

const blogs = await getCollection("blog");

const title = "Mina's Blog";
---

<MainLayout title={title} description={title}>
  <h1 class="text-2xl font-bold text-center m-auto">{title}</h1>
  <div class="flex flex-col flex-nowrap m-auto">
    {
      blogs.map((blog) => (
        <ButtonLink href={`/blog/${blog.id}/`}>{blog.data.title}</ButtonLink>
      ))
    }
  </div>
</MainLayout>
