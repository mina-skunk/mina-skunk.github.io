---
import { getCollection } from "astro:content";
import AmateurVoiceLayout from "../../layouts/AmateurVoiceLayout.astro";

const stations = (await getCollection("stations"))
  .filter(
    (station) =>
    station.data.categories && station.data.categories.includes("2m") &&
    station.data.tags && station.data.tags.includes("Voice")
  )
  .sort((a, b) => a.data.frequency.valueOf() - b.data.frequency.valueOf());

const title = "2 Meter Voice";
const description = "local 2 Meter Voice Radio Stations";
---

<AmateurVoiceLayout title={title} description={description} stations={stations} />
