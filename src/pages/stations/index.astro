import ButtonLink from "../../components/ButtonLink.astro";

const title = "Radio Stations";
const description = "local Radio Stations";
---

<MainLayout title={title} description={description}>
  <h1 class="text-2xl font-bold text-center m-auto">{title}</h1>
  <div class="flex flex-col flex-nowrap m-auto">
    <ButtonLink href="/stations/fm-broadcast">
      FM Broadcast Stations
    </ButtonLink>
    <ButtonLink href="/stations/amateur-radio">
      Amatrue Radio Stations
    </ButtonLink>
    <ButtonLink href="#">
      2 Meter
    </ButtonLink>
  </div>
</MainLayout>
